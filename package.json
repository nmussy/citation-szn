{
  "private": true,
  "name": "citation-szn",
  "version": "0.3.0",
  "license": "MIT",
  "author": {
    "name": "Jimmy Gaussen",
    "email": "jimmy.gaussen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmussy/citation-szn.git"
  },
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests",
    "predeploy": "cross-env GITHUB_PAGES=citation-szn yarn build --no-prerender && dot-json ./build/manifest.json start_url '/citation-szn/'",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "halfmoon": "^1.1.1",
    "handlebars": "^4.7.7",
    "history": "^5.1.0",
    "luxon": "^2.1.1",
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-select": "^5.2.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/halfmoon": "^1.0.1",
    "@types/jest": "^26.0.8",
    "@types/luxon": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "cross-env": "^7.0.3",
    "dot-json": "^1.2.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-config-prettier": "^8.3.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.2.5",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.0",
    "prettier": "^2.5.1",
    "sirv-cli": "^1.0.0-next.3",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
